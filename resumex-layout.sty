\def\@SectionBulletWidth{\dimexpr(0.99\textwidth-\@SectionBulletIndent)\relax}%
% ============================================================================ %
\def\@HeadingItemSpacing{\kern 0.5em}%
\def\@HeadingIconSpacing{\kern 0.4em}%
% ============================================================================ %
\def\@HeadingTailSpacing{\dimexpr(\baselineskip)*5/4\relax}%
\def\@SectionTailSpacing{\dimexpr(\baselineskip)*1/2\relax}%
% ============================================================================ %
\def\@RuleThickness{0.5pt}%
% ============================================================================ %
\def\@PortraitSize{0.90in}%
% ============================================================================ %
\def\@SkillsListColumns{4}%
