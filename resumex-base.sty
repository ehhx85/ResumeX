\newcommand{\@BuildItemDate}[2]{% date used for all resume blocks
    \def\@TMP{Present}%
    \ifx #2\empty{%
        \@TMP%
    }%
    \else{%
        \ifx #1\empty{%
            \@TMP%
        }%
        \else{%
            \StrLeft{\DTMenglishmonthname{#1}}{3}\ #2% shorten month name
        }\fi%
    }\fi%
    \let\@TMP\undefined%
}%
% ============================================================================ %
\newcommand{\@BuildItemSemester}[2]{%
    \def\@tmpSpring{Spring}%
    \def\@tmpSummer{Summer}%
    \def\@tmpFall{Fall}%
    \IfStrEqCase{#1}{%
        {1}{\@tmpSpring}%
        {spr}{\@tmpSpring}
        {spring}{\@tmpSpring}
        {Spring}{\@tmpSpring}
        {2}{\@tmpSummer}%
        {sum}{\@tmpSummer}%
        {summer}{\@tmpSummer}%
        {Summer}{\@tmpSummer}%
        {3}{\@tmpFall}%
        {fall}{\@tmpFall}%
        {Fall}{\@tmpFall}%
    }[]%
    \ #2%
}%
