\NewDocumentCommand{\GenerateBibliographyBlock}{ O{} }{%
    \@LoadFile{info}{#1}%
    \begin{refsection}%
    % ------------------------------------------------------------------------ %
        \nocite{\@BibliographyList}%
        \vspace*{-1.0ex}%
        \renewcommand*{\bibfont}{\footnotesize}%
        \printbibliography[%
            heading={none},%
        ]%        
    % ------------------------------------------------------------------------ %
    \end{refsection}%
    \par%
    \vspace*{-1.0ex}%
    \vspace{\@SectionTailSpacing}%
    \@reset@BibliographyList%
}%
